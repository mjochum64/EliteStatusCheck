# Example environment variables for EliteStatusCheck
ELITE_STATUS_PATH=
# API token for backend authentication (set a secure value!)
ELITESTATUS_API_TOKEN=
# Logging level for backend (e.g. DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=DEBUG

# Inara API Configuration
# Get your API key from: https://inara.cz/settings-api/
INARA_API_KEY=your_inara_api_key_here
# Set to 'true' to use mock client for testing without valid API key
INARA_USE_MOCK=false
INARA_APP_NAME=EliteStatusCheck
INARA_APP_VERSION=1.1.0
INARA_BASE_URL=https://inara.cz/inapi/v1/
INARA_TIMEOUT=30
INARA_MAX_RETRIES=3
INARA_RETRY_DELAY=1.0
INARA_BACKOFF_FACTOR=2.0
INARA_RATE_LIMIT_REQUESTS=100
INARA_RATE_LIMIT_WINDOW=3600
INARA_CACHE_ENABLED=true
INARA_CACHE_TTL=300
